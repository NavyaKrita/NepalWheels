@model FoxNetSoft.Plugin.Misc.PopupManager.Models.Admin.PopupWindowModel
@{
    Layout = "_AdminLayout";
    //page title
    ViewBag.PageTitle = @T("Admin.FoxNetSoft.PopupManager.AddNew").Text;

    Html.SetActiveMenuItemSystemName("FoxNetSoft.PopupManager.List");
}
<form asp-controller="PopupManagerAdmin" asp-action="Create" method="post" id="popupwindow-form">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.FoxNetSoft.PopupManager.AddNew")
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="List">@T("Admin.FoxNetSoft.PopupManager.BackToList")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.SaveContinue")
            </button>
        </div>
    </div>
    @await Html.PartialAsync("~/Plugins/FoxNetSoft.PopupManager/Views/PopupManagerAdmin/_CreateOrUpdate.cshtml", Model)
</form>
