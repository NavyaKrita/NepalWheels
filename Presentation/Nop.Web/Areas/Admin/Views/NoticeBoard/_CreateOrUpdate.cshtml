@model CreateNoticeBoardModel

<div asp-validation-summary="All"></div>
<input asp-for="Id" type="hidden" />

<section class="content">
    <div class="container-fluid">
        <div class="form-horizontal">
            <div class="row">
                <div class="col-md-12 clearfix">
                    <div class="float-left">
                        @await Component.InvokeAsync("SettingMode", new { modeName = "notice-board-mode" })
                    </div>
                </div>
            </div>

            <div class="cards-group">

                <div class="card card-default">
                    <div class="card-body">


                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-label asp-for="Title" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="Title" asp-required="true" />
                                <span asp-validation-for="Title"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-label asp-for="Notice" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="Notice" asp-template="RichEditor" asp-required="true" />
                                <span asp-validation-for="Notice"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-label asp-for="ThankYou" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="ThankYou" asp-template="RichEditor" asp-required="true" />
                                <span asp-validation-for="ThankYou"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-label asp-for="DisplayForm" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="DisplayForm" />
                                <span asp-validation-for="DisplayForm"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-label asp-for="PublishedFrom" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="PublishedFrom" asp-required="true" asp-template="da" />

                                <span asp-validation-for="PublishedFrom"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-label asp-for="PublishedTo" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="PublishedTo" />
                                <span asp-validation-for="PublishedTo"></span>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>